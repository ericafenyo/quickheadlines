<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorWhite">


  <ImageView
    android:id="@+id/button_more"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintBottom_toBottomOf="@+id/image_article_thumbnail"
    app:layout_constraintEnd_toStartOf="@+id/image_article_thumbnail"
    app:layout_constraintTop_toBottomOf="@+id/text_article_title"
    app:layout_constraintVertical_bias="0.0"
    app:srcCompat="@drawable/ic_baseline_more_horiz_24px"/>

  <TextView
    android:id="@+id/text_article_title"
    style="@style/TextAppearance.Headline6"
    android:textStyle="normal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:contentDescription="@string/accessibility_title"
    android:lineSpacingExtra="1sp"
    android:textColor="#1d1f24"
    android:textSize="18sp"
    app:layout_constraintEnd_toStartOf="@+id/image_article_thumbnail"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Citrus Farmers Facing Deadly Bacteria Turn to Antibiotics, Alarming Health Officials"/>

  <ImageView
    android:id="@+id/image_article_thumbnail"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginBottom="20dp"
    android:layout_marginEnd="16dp"
    android:contentDescription="@string/accessibility_thumbnail"
    android:scaleType="centerCrop"
    app:layout_constraintDimensionRatio="3:2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@drawable/business"/>

  <TextView
    android:id="@+id/text_article_published_time"
    android:textStyle="normal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:contentDescription="@string/accessibility_description"
    android:fontFamily="sans-serif-medium"
    android:gravity="end"
    android:lineSpacingExtra="4sp"
    android:textColor="@color/ColorDisabledDark"
    android:textSize="12sp"
    app:layout_constraintBottom_toBottomOf="@+id/button_more"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/button_more"
    tools:text="11 hours ago"/>

</androidx.constraintlayout.widget.ConstraintLayout>
